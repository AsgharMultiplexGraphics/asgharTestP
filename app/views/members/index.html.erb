<h1>Total users</h1>
<p>Find me in app/views/members/index.html.erb</p>

<%=@users.size %>


<table class="table table-striped table-hover table-bordered">
  <thead class="table-secondary text-center" >
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Gender</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class= "text-center">
    <%@users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id%></th>
      <td><%= user.name %></td>
      <td><%= user.gender%></td>
      <td>
        <%= link_to "View", member_path(user), class: 'btn btn-primary', style: "color: white;"%>
        <%= link_to "Edit", edit_member_path(user), class: 'btn btn-secondary', style: "color: white;"%>
        
        <%# <%= button_to "Delete", user, method: :delete, class:"btn btn-outline-danger", onclick: 'return confirm("Are you sure?");' %>  

      </td>
    </tr>
    <% end%>
  </tbody>
</table>