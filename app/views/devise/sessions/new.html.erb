  
<div class="login-wrapper ">
  <div class="login-content ">
    <div class="login-userset">
      <div class="login-logo logo-normal ">
        <div class=" justify-content-center align-items-center  ">
          <div class="text-center"> <%= image_tag('logo.jpg', alt: 'About Us Image', style: "max-width: 100%; height: 133px; margin-left:120px;", class: "logo ") %> </div>
        </div>
      </div>
      <div class="login-userheading">
        <h3>Sign In to Your Account</h3>
        <%# <h4>Continue where you left off</h4> %>
      </div>
      <div class="form-login">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-addons">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter your Email" %>
            <%= image_tag 'mail.svg' %>
          </div>
          <br>
          <div class="form-login">
            <div class="form-addons">
              <%= f.password_field :password, autocomplete: "current-password"  , placeholder: "Enter your password" %>
              <span class="fas toggle-password fa-eye-slash"></span>
            </div>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class=" field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions form-login" >
            <%= f.submit "Log in" ,class:"btn btn-login"%>
          </div>
          <br>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
      <%# <div class="signinform text-center">
          </div> %>
    </div>
  </div>
  <div class="login-img">
    <!--        <img src="assets/img/login.jpg" alt="img">-->
    <%= image_tag 'login.jpg' %>
  </div>
</div>
</div>
